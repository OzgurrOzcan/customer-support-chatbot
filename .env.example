# ===========================================
# Gelişim Chatbot API — Environment Variables
# ===========================================
# Copy this file to .env and fill in real values
# NEVER commit .env to version control!

# --- API Keys (Required) ---
OPENAI_API_KEY=your-openai-key-here
PINECONE_API_KEY=your-pinecone-key-here

# --- Security (Required) ---
# API keys that your Next.js frontend will use to authenticate
API_KEYS=["your-nextjs-api-key-here"]

# --- CORS (Required) ---
# Allowed origins for CORS (your Next.js domain)
ALLOWED_ORIGINS=["http://localhost:3000"]

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Budget Limits ---
IP_DAILY_LIMIT=200
GLOBAL_DAILY_LIMIT=5000

# --- Application ---
APP_NAME=Gelisim Chatbot API
DEBUG=true
